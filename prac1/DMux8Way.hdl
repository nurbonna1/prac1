CHIP DMux8Way {
    IN in, sel[3];
    OUT a, b, c, d, e, f, g, h;

    PARTS:
    // First, split input into two parts using sel[2]
    DMux(in=in, sel=sel[2], a=top, b=bottom);

    // Then split each half into four outputs using the lower two bits sel[0..1]
    DMux4Way(in=top, sel=sel[0..1], a=a, b=b, c=c, d=d);
    DMux4Way(in=bottom, sel=sel[0..1], a=e, b=f, c=g, d=h);
}
