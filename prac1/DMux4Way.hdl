CHIP DMux4Way {
    IN in, sel[2];
    OUT a, b, c, d;

    PARTS:
    // First level of demux splits input into two halves based on sel[1]
    DMux(in=in, sel=sel[1], a=top, b=bottom);

    // Second level splits each half further based on sel[0]
    DMux(in=top, sel=sel[0], a=a, b=b);
    DMux(in=bottom, sel=sel[0], a=c, b=d);
}
